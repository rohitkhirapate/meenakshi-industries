---
import logo1 from '@/images/kirti-logo.png';
import logo2 from '@/images/kutwal-logo.png';
import logo3 from '@/images/ksb-logo.png';
import logo4 from '@/images/kinetic-logo.png';
import logo5 from '@/images/golde-pune-logo.png';
import logo6 from '@/images/hempra-logo.png';
import logo7 from '@/images/ducati-logo.png';
import { Image } from 'astro:assets';
const { title, subTitle } = Astro.props;
interface Props {
  title: string;
  subTitle?: string;
}
---

<section class="mx-auto max-w-[85rem] px-4 py-10 sm:px-6 lg:px-8 lg:py-14 2xl:max-w-full">
  <!-- Title and description -->
  <div class="mx-auto mb-6 w-full space-y-1 text-center sm:w-1/2 lg:w-1/3">
    <h2 class="text-balance text-2xl font-bold leading-tight text-neutral-800 dark:text-neutral-200 sm:text-3xl">
      {title}
    </h2>
    {subTitle && (
      <p class="text-pretty leading-tight text-neutral-600 dark:text-neutral-400">
        {subTitle}
      </p>
    )}
  </div>
  <div class="flex flex-col items-center justify-center gap-y-2 sm:flex-row sm:gap-x-12 sm:gap-y-0 lg:gap-x-24">
    <!-- Clients Group PNGs -->
    <!-- First -->
    <Image
      class="mx-auto h-auto w-32 py-3 sm:mx-0 lg:w-40 lg:py-5"
      src={logo1}
      alt="Client Logo 1"
    />
    <!-- Second -->
    <Image
      class="mx-auto h-auto w-32 py-3 sm:mx-0 lg:w-40 lg:py-5"
      src={logo2}
      alt="Client Logo 2"
    />
    <!-- Third -->
    <Image
      class="mx-auto h-auto w-32 py-3 sm:mx-0 lg:w-40 lg:py-5"
      src={logo3}
      alt="Client Logo 3"
    />
    <!-- Fourth -->
    <Image
      class="mx-auto h-auto w-24 py-3 sm:mx-0 md:w-32 lg:w-40 lg:py-5"
      src={logo4}
      alt="Client Logo 4"
    />
  </div>
  <div class="flex flex-col items-center justify-center gap-y-2 sm:flex-row sm:gap-x-12 sm:gap-y-0 lg:gap-x-24">
    <!-- Fifth -->
    <Image
      class="mx-auto h-auto w-32 py-3 sm:mx-0 lg:w-40 lg:py-5"
      src={logo5}
      alt="Client Logo 5"
    />
    <!-- Sixth -->
    <Image
      class="mx-auto h-auto w-32 py-3 sm:mx-0 lg:w-40 lg:py-5"
      src={logo6}
      alt="Client Logo 6"
    />
    <!-- Seventh -->
    <Image
      class="mx-auto h-auto w-32 py-3 sm:mx-0 lg:w-40 lg:py-5"
      src={logo7}
      alt="Client Logo 7"
    />
  </div>
</section>